<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_ranking_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@+id/iv_user_profile"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_profile"
        app:layout_constraintStart_toStartOf="parent"
        />


    <ImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="49dp"
        android:layout_height="0dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="21dp"
        android:src="@drawable/ic_greats_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/tv_ranking_number"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:ellipsize="end"
        android:text="User ID"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_user_profile"
        app:layout_constraintTop_toTopOf="@id/iv_user_profile" />

    <TextView
        android:id="@+id/tv_user_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:text="100pt"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_profile"
        app:layout_constraintStart_toStartOf="@id/tv_user_id" />

</androidx.constraintlayout.widget.ConstraintLayout>