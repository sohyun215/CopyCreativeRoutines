<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    >

    <CheckBox
        android:id="@+id/cb_schedule_select"
        android:layout_width="24dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:button="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/selector_great_schedule"
        />

    <TextView
        android:id="@+id/tv_schedule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="기상"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#262526"
        android:lineSpacingExtra="8sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cb_schedule_select"/>

    <TextView
        android:id="@+id/tv_schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif"
        android:text="AM 7:00 "
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#9b9fa3"
        android:lineSpacingExtra="10sp"
        app:layout_constraintStart_toStartOf="@+id/tv_schedule_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_schedule_name" />

</androidx.constraintlayout.widget.ConstraintLayout>